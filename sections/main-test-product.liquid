<p>Hello from the section files!</p>

<h2>{{ product.title }}</h2>
<img
  src="{{product.featured_image | img_url: '300x'}}"
  alt="New Hotness"
  title="New Hotness">

{% for block in section.blocks %}
  {% case block.type %}
    {% when "tax-movable" %}
    <h4>{{ block.settings.tax-notice-text }}</h4>

    {% when "shipping-movable" %}
    <h4>{{ block.settings.shipping-notice-text }}</h4>

    {% when "product-price" %}
    <h4>{{ product.price }}</h4>

  {% endcase %}
{% endfor %}

{% if section.settings.show-reviews %}
  <h4>⭐⭐⭐⭐</h4>
{% endif %}



{% schema %}
  {
    "name": "Product Page Content",
    "settings": [
      {
        "id": "show-reviews",
        "label": "Show Reviews?",
        "type": "checkbox"
      }
    ],
    "blocks": [
      {
        "type": "tax-movable",
        "name": "Tax Notice",
        "limit": 1,
        "settings": [
          {
            "id": "tax-notice-text",
            "label": "Enter Tax Notice",
            "type": "text"
          }
        ]
      }, {
        "type": "shipping-movable",
        "name": "Shipping Notice",
        "limit": 1,
        "settings": [
          {
            "id": "shipping-notice-text",
            "label": "Enter Shipping Notice",
            "type": "text"
          }
        ]
      }, {
        "type": "product-price",
        "name": "Product's Price",
        "limit": 1,
        "settings": []
      }
    ]
  }
{% endschema %}